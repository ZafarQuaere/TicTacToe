<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteBg"
        android:padding="16dp"
        android:orientation="vertical">

    <Button
            android:textAllCaps="false"
            android:text="Refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRefersh"/>

    <Button
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="Enable AutoPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnableAutoPlay"/>

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            tools:context=".MainActivity">
        <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/btn1"/>
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn2"/>
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn3"/>
        </TableRow>

        <TableRow
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/btn4"/>
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn5"/>
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn6"/>
        </TableRow>

        <TableRow
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn7"/>
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn8"/>
            <Button
                    android:background="@color/colorWhite"
                    android:onClick="buttonClick"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn9"/>
        </TableRow>
    </TableLayout>

</LinearLayout>