<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.learn.MainActivity">

    <Button
            android:text="Tic Tac Toe"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnTicTacToe"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textAllCaps="false" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.514"/>
    <Button
            android:text="Calculator"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnCalculator" app:layout_constraintStart_toStartOf="@+id/btnTicTacToe"
            app:layout_constraintEnd_toEndOf="@+id/btnTicTacToe" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTicTacToe" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Get Sunset"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/btnGetSunset" app:layout_constraintEnd_toEndOf="@+id/btnCalculator"
            app:layout_constraintStart_toStartOf="@+id/btnCalculator" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalculator"/>
    <Button
            android:text="Contact me \nNaviation Graph"
            android:layout_width="261dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnNavigationDemo" app:layout_constraintTop_toBottomOf="@+id/btnGetSunset"
            android:layout_marginTop="48dp" android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>
