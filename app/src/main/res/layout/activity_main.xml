<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.learn.caculator.MainActivity">

    <Button
            android:text="Tic Tac Toe"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnTicTacToe"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textAllCaps="false" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.514"/>
    <Button
            android:text="Calculator"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnCalculator" app:layout_constraintStart_toStartOf="@+id/btnTicTacToe"
            app:layout_constraintEnd_toEndOf="@+id/btnTicTacToe" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTicTacToe" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
